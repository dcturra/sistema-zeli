{
  "version": 2,
  "functions": {
    "api/records.js": {
      "maxDuration": 30
    },
    "api/medications.js": {
      "maxDuration": 30
    },
    "api/technicians.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    }
  ],
  "public": true
} 